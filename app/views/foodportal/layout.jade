  head
    title The Food Portal &mdash; Eat Real &amp; Local
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    meta(name='description', content='Places, Articles, Books, Recipes and Brands curated by Sandra Cabrera de Diego and Vincent Battaglia')
    meta(property='og:image', content='http://v1n.ch/img/foodportal/thumbnail.png')
    link(href='/css/foodportal.css', rel='stylesheet')
    link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', rel='stylesheet')
    script(type='text/javascript', src='//use.typekit.net/pek2yuw.js')
    script(type='text/javascript') try{Typekit.load();}catch(e){}
  
  body(ng-controller='MainController')

    #menu(ng-click='toggleNav()', click-outside='clickOutsideMenu()')
      i.fa.fa-bars
      span Menu

    #container

      header
        h1 The Food Portal

      nav.main(ng-show='visibleNav')
        a(ui-sref='places', ui-sref-active='active') PLACES
        a(ui-sref='articles', ui-sref-active='active') ARTICLES
        a(ui-sref='books', ui-sref-active='active') BOOKS
        a(ui-sref='products', ui-sref-active='active') PRODUCTS
        a(ui-sref='recipes', ui-sref-active='active') RECIPES

      #content(ui-view='')

      footer &copy; #{new Date().getFullYear()} The Food Portal

    // build:js /js/dependencies/foodportal.min.js
    script(src='/js/dependencies/foodportal.js')
    // /build

    // build:js /js/foodportal.min.js
    script(src='/js/foodportal/app.js')
    script(src='/js/foodportal/controllers.js')
    script(src='/js/foodportal/controllers/main-controller.js')
    script(src='/js/foodportal/controllers/articles-controller.js')
    script(src='/js/foodportal/controllers/books-controller.js')
    script(src='/js/foodportal/controllers/places-controller.js')
    script(src='/js/foodportal/controllers/places-page-controller.js')
    script(src='/js/foodportal/controllers/products-controller.js')
    script(src='/js/foodportal/controllers/recipes-controller.js')
    script(src='/js/foodportal/directives.js')
    script(src='/js/foodportal/filters.js')
    script(src='/js/foodportal/services.js')
    // /build

