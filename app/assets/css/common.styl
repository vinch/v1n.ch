lightergray = #f7f7f7
lightgray = #eee
gray = #ddd
grayer = #aaa
darkgray = #666
darkergray = #333

*
  margin: 0
  padding: 0
  box-sizing: border-box
  -webkit-font-smoothing: antialiased

html, body
  height: 100%

body
  font-family: 'pt-serif', serif
  font-size: 62.5%
  -webkit-font-smoothing: antialiased
  background: white

a
  color: red
  text-decoration: none
  &:hover
    border-bottom: 1px solid red

#container
  width: 640px
  margin: 0 auto

  header
    padding-top: 100px
    margin-bottom: 50px
    h1
      font-family: 'adelle-sans', sans-serif
      font-size: 50px
      line-height: 1em
      margin-bottom: 5px
      a
        color: black
        strong
          color: red
    .subtitle
      font-size: 20px
      line-height: 1.6em
      color: grayer

  footer
    padding-bottom: 100px
    margin-top: 50px
    text-align: center
    font-size: 16px
    color: grayer

#content
  section
    margin-bottom: 30px
    h2
      font-size: 30px
      line-height: 1em
      margin-bottom: 15px
      font-family: 'adelle-sans', sans-serif
    p
      font-size: 20px
      line-height: 1.6em
      color: darkgray