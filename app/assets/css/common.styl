lightergray = #f7f7f7
lightgray = #eee
gray = #ddd
grayer = #aaa
darkgray = #666
darkergray = #333
red = #f00
lightblue = #E5EAF1

*
  margin: 0
  padding: 0
  box-sizing: border-box
  -webkit-font-smoothing: antialiased

html, body
  height: 100%

body
  font-family: 'pt-serif', serif
  font-size: 62.5%
  -webkit-font-smoothing: antialiased
  background: white

a
  color: red
  text-decoration: none
  &:hover
    border-bottom: 1px solid red

img
  display: block

#container
  max-width: 640px
  padding: 0 20px
  margin: 0 auto

header
  padding: 100px 20px 0
  margin: 0 auto 50px
  max-width: 640px
  h1
    font-family: 'adelle-sans', sans-serif
    font-size: 50px
    line-height: 1em
    margin-bottom: 5px
    a
      color: black
      strong
        color: red
      &:hover
        border: 0
  .subtitle
    font-size: 20px
    line-height: 1.6em
    color: darkgray

nav
  margin-bottom: 50px
  font-size: 20px
  background: #E5EAF1
  .inner
    max-width: 640px
    height: 47px
    padding: 0 20px
    margin: 0 auto
    color: darkgray
    a
      float: left
      display: block
      color: darkgray
      line-height: 47px
      padding: 0 15px
      border-right: 2px solid white
      &:first-child
        border-left: 2px solid white
      &:hover
        color: darkergray
        background: rgba(255,255,255,0.5)
        border-bottom: 0
      &.active
        color: darkergray
        background: white
        pointer-events: none
      &.search
        float: right
        border-left: 2px solid white
        font-size: 25px
      i
        font-size: 25px
        height: 47px
        display: none
        line-height: 47px

footer
  padding-bottom: 100px
  margin-top: 100px
  #social
    clearfix()
    width: 175px
    margin: 0 auto 20px
    a
      display: block
      float: left
      width: 40px
      height: 40px
      background: gray
      font-size: 20px
      line-height: 40px
      text-align: center
      color: darkgray
      border-radius: 20px
      margin-right: 5px
      &:hover
        background: darkgray
        color: white
      &:last-child
        margin: 0
  #copyright
    display: block
    text-align: center
    font-size: 16px
    color: grayer

#content
  section
    margin-bottom: 40px
    h2
      font-size: 30px
      line-height: 1.2em
      margin-bottom: 5px
      font-family: 'adelle-sans', sans-serif
      color: black
    p
      font-size: 20px
      line-height: 1.6em
      color: darkgray
      margin-bottom: 20px
      strong
        font-weight: normal
        background-color: lightblue

#search
  z-index: 500
  display: none
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0,0,0,0.8)
  input
    position: absolute
    top: 50%
    left: 50%
    margin-left: -35%
    margin-top: -50px
    width: 70%
    height: 100px
    border: 0
    border-bottom: 1px solid white
    background: transparent
    font-size: 60px
    font-weight: normal
    font-family: 'adelle-sans', sans-serif
    line-height: 1em
    font-weight: bold
    color: white
    outline: none

@media (max-width: 500px)
  header
    padding-top: 50px
  nav
    .inner
      a
        &.search
          float: left
          border-left: 0
        i
          display: block
        span
          display: none
  footer
    padding-bottom: 50px
    margin-top: 50px