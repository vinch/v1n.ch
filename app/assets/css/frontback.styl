@import 'nib'

lightergray = #f7f7f7
lightgray = #eee
gray = #ddd
grayer = #aaa
darkgray = #666
darkergray = #333

*
  margin: 0
  padding: 0
  box-sizing: border-box
  -webkit-font-smoothing: antialiased

html, body
  height: 100%

body
  font-family: 'Helvetica', sans-serif
  font-size: 62.5%
  -webkit-font-smoothing: antialiased
  background: white

h1
  width: 200px
  height: 200px
  background: url('/img/frontback.jpg')
  background-size: 200px 200px
  margin: 100px auto
  text-indent: -9999px

p
  max-width: 950px
  padding: 0 50px
  font-size: 24px
  line-height: 1.4em
  margin: 0 auto 100px
  font-weight: 100
  a
    color: black

ul
  clearfix()
  display: block
  margin: 0 auto 50px
  width: 950px
  list-style: none
  padding-left: 50px
  li
    display: block
    width: 250px
    height: 444px
    float: left
    margin: 0 50px 50px 0
    a
      img
        display: block
        width: 250px

.lightbox
  display: none
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  background: rgba(0,0,0,0.6)
  z-index: 100
  img
    display: block
    position: absolute
    left: 0
    bottom: 0
    top: 0
    right: 0
    margin: auto
    width: auto
    height: auto
    max-height: calc(100% - 100px)
    max-width: calc(100% - 100px)
    box-shadow: 0 2px 20px 1px rgba(0,0,0,0.3)
  &:target
    display: block

.lightbox:target ~ #container
  -webkit-filter: blur(15px)

@media (max-width: 950px)
  ul
    width: 650px

@media (max-width: 650px)
  h1
    margin: 50px auto
  p
    padding: 0 25px
    font-size: 16px
    margin-bottom: 50px
  ul
    width: 300px
    padding-left: 25px
    li
      margin: 0 25px 25px 0
  .lightbox
    img
      max-height: calc(100% - 50px)
      max-width: calc(100% - 50px)