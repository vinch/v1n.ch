@import 'nib'
@import 'common'

#content
  #photos
    h2
      margin-bottom: 10px

#posts
  ul
    list-style: none
    li
      h3
        font-family: 'adelle-sans', sans-serif
        font-size: 24px
        line-height: 1.4em
        margin: 20px 0 2px
        a
          color: grayer
          &:hover
            border-color: grayer
      p
        a
          color: darkgray
          &:hover
            border-color: darkgray

#photos
  .container
    clearfix()
    margin-bottom: 10px
    a
      float: left
      width: 22.5%
      margin: 0 3.333333333% 0 0
      border: 0
      img
        width: 100%
        -webkit-filter: grayscale(1)
        opacity: 0.8
      &:hover
        img
          -webkit-filter: grayscale(0)
          opacity: 1
      &:last-child
        margin-right: 0

@media (max-width: 500px)
  #photos
    .container
      a
        width: 48%
        margin: 0 4% 4% 0
        &:nth-child(2)
          margin-right: 0
        &:nth-child(3)
          margin-bottom: 0