@import 'nib'
@import 'common'

#experiments
  section
    h3 
      font-family: 'jubilat', sans-serif
      font-weight: 100
      font-size: 200px
      line-height: 220px
      color: darkergray
      margin-left: -100px
    ul
      list-style: none
      li
        h4
          clearfix()
          font-family: 'adelle-sans', sans-serif
          font-size: 24px
          line-height: 1.4em
          margin: 20px 0 2px
          a
            color: grayer
            &:hover
              border-color: grayer

@media (max-width: 1000px)
  #experiments
    section
      h3
        margin-left: 0

@media (max-width: 500px)
  #experiments
    section
      h3
        font-size: 100px